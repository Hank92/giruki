<!-- views/humor_board.ejs -->
<!doctype html>
<html>
<head>
    <title>하즐 - 하루의 즐거움</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    
    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <!--call the css file -->
    <link rel='stylesheet' href='/css/humor_board.css'>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="imagetoolbar" content="no" />
    <meta name='keyword' content="하루, 즐거움, 짤, hazzul, 웃긴">

</head>

<body>

  <div class="col-sm-12 col-md-12 affix-content">
    <div class="container">
      
    <header>
      <h1><span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Hazzul</h1>
    </header>

   
           <!-- LOCAL INFORMATION -->
            <div class="row">

       <% for(var i = postModels.length-1; i > -1 ; i--) { %>
    
            <a class="thumbnail" href="/humor_board/<%= postModels[i].id %>">
                <img class="img-responsive" src="<%= postModels[i].image_url[0] %>" alt="이미지 로딩중...">
                <div class="text-center">
                  <h5><%= postModels[i].title %></h5>
                  <h7><%= postModels[i].posted.toLocaleDateString() %></h7>
                </div>
            </a>
       <% }%>
</div>
<div style = "float: center">       
<% if (pageCount > 1) { %>  
<ul class="pagination">  
  <% if (currentPage > 1) { %>
      <li><a href="/humor_board/?page=1">&laquo;</a></li>
  <% } %>
  <% var i = 1;
  if (currentPage > 5) {
  i = +currentPage - 4;
  } %>
  <% if (i !== 1) { %>
      <li class="disabled"><a href="#">...</a></li>
  <% } %>
  <% for (i; i<=pageCount; i++) { %>
    <% if (currentPage == i) { %>
        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
    <% } else { %>
        <li><a href="/humor_board/?page=<%= i %>"><%= i %></a></li>
    <% } %>
    <% if (i == (currentPage + 4)) { %>
        <li class="disabled"><a href="#">...</a></li>
    <% break; } %>
  <% } %>
  <% if (currentPage != pageCount) { %>
      <li><a href="/humor_board/?page=<%= pageCount %>">&raquo;</a></li>
  <% } %>
</ul>  
<% } %> 

</div>

</div>
</div>



</body>
</html>